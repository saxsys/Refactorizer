<UserControl x:Class="Refactorizer.VSIX.Views.DeleteConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Refactorizer.VSIX.Views"
             Width="300"
             Height="100"
             Padding="10"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBox TextAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="10 5 10 5" Grid.Row="0" Text="{Binding Message}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="190" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Padding="10 5" Command="{Binding Confirm}" Content="Confirm" /> 
            <Button Grid.Column="1" HorizontalAlignment="Right"  Padding="10 5" Command="{Binding Cancel}" Content="Cancel" /> 
        </Grid>
    </Grid>
</UserControl>
